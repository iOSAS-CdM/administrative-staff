{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "iOSAS Administrative Staff",
	"version": "latest",
	"identifier": "com.danieljohnbyns.iosas-administrative-staff",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1421",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "iOSAS Administrative Staff",
				"width": 1000,
				"height": 800,
				"minWidth": 800,
				"minHeight": 500,
				"zoomHotkeysEnabled": true,
				"backgroundColor": "#FFFFFF00"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"createUpdaterArtifacts": true
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": [
					"oauth",
					"osas-administrative-staff"
				]
			}
		},
		"updater": {
			"endpoints": [
				"https://github.com/iOSAS-CdM/administrative-staff/releases/latest/download/latest.json"
			],
			"dialog": true,
			"active": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMzRUQxMkIyNEMwQTM4REMKUldUY09BcE1zaEx0TTBMMFI4VU1YWDZaZW5wOGxxK3RRcWlLMHNFMFdDUmozVi85YStOVkx3cVgK"
		}
	}
}
